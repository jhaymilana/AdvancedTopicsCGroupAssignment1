@model AdvancedTopicsCGroupAssignment1.Models.PersonAddress

@{
    ViewData["Title"] = "Add Address";
}

<h4 class="mt-5">Add Address</h4>

<form asp-action="AddAddress">
    <div class="form-group">
        <input type="hidden" asp-for="PersonId" />
    </div>

    <div class="form-group">
        <label asp-for="AddressId" class="control-label">Select Address</label>
        <select asp-for="AddressId" class="form-control">
            @if (ViewBag.Addresss != null)
            {
                foreach (Address address in ViewBag.Addresss)
                {
                    <option value="@address.Id">@address.StreetNumber @address.StreetName @address.UnitNumber, @address.PostalCode</option>
                }
            }
            else
            {
                <option value="Please Create an Address"></option>
            }
        </select>
        <span asp-validation-for="AddressId" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <input type="submit" value="Add Address" class="btn btn-success" />
        <a asp-action="Details" asp-route-id="@Model.PersonId" class="btn btn-secondary ms-2">Back to Person</a>
    </div>
</form>