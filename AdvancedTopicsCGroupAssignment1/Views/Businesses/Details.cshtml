@model AdvancedTopicsCGroupAssignment1.Models.Business

@{
    ViewData["Title"] = "Details";
}

<h4 class="mt-5"> Business Details</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
    </dl>
</div>
<div>


    <h3>Associated Addresses</h3>
    <ul>
        @foreach (var address in Model.businesssAdresses)
        {
            <li>
                @address
                <a asp-action="RemoveAddress" asp-route-businessId="@Model.Id" asp-route-addressId="@address.Id">Remove</a>
            </li>
        }
    </ul>
</div>
<div>
    <h3>Associated People</h3>
    <ul>
        @foreach (var person in Model.personBusinesses)
        {
            <li>
                @person
                <a asp-action="RemovePerson" asp-route-businessId="@Model.Id" asp-route-personId="@person.Id">Remove</a>
            </li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning mt-4">Edit</a> 
    <a asp-action="Index" class="btn btn-secondary mt-4">Back to List</a>
</div>
<div>
    <a asp-action="CreateAddress" asp-route-businessId="@Model.Id">Create New Address</a> |
    <a asp-action="AddExistingAddress" asp-route-businessId="@Model.Id">Add Existing Address</a> |
    <a asp-action="CreatePerson" asp-route-businessId="@Model.Id">Create New Person</a> |
    <a asp-action="AddExistingPerson" asp-route-businessId="@Model.Id">Add Existing Person</a>
</div>